.container {
  min-height: 100vh;
}

.cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
}

.inv {
  width: 572rpx;
  height: 69rpx;
  position: fixed;
  top: 80rpx;
  left: 89rpx;
  z-index: 99;
}

.datetime {
  position: fixed;
  bottom: 50rpx;
  width: 620rpx;
  padding: 15rpx;
  background-color: rgba(255, 255, 255, 0.8);
